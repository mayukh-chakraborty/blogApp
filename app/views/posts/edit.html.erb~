<%= form_for :post, url: posts_path(@post),method: :patch do |f| %>
  <p>
    <%= f.label :author_id %><br>
    <%= f.text_field :author_id %>
  </p>
 
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
